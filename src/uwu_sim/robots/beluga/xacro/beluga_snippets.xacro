<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="prop_mesh_file" value="file://../meshes/propeller.dae"/>

  <!-- Thruster joint and link snippet --> 
  <xacro:macro name="thruster_macro"
    params="robot_namespace thruster_id rotor_constant *origin">
    <xacro:thruster_module_first_order_basic_fcn_macro
      namespace="${robot_namespace}"
      thruster_id="${thruster_id}"
      mesh_filename="${prop_mesh_file}"
      dyn_time_constant="0.01"
      rotor_constant="${rotor_constant}">
      <xacro:insert_block name="origin"/>
    </xacro:thruster_module_first_order_basic_fcn_macro>
  </xacro:macro>

</robot>
